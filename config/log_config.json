{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "detailed": {
            "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
            "format": "%(asctime)s %(name)s %(levelname)s %(processName)s %(threadName)s %(message)s"
        },
        "simple": {
            "class": "logging.Formatter",
            "format": "%(asctime)s %(name)-15s %(levelname)-8s %(message)s"
        },
        "minimal": {
            "class": "logging.Formatter",
            "format": "%(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "minimal",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "maxBytes": 1000000,
            "backupCount": 10,
            "filename": "main.log",
            "mode": "a",
            "formatter": "detailed"
        },
        "lazy_whale": {
            "level": "DEBUG",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "lazy_whale.log",
            "mode": "a",
            "formatter": "simple",
            "maxBytes": 1000000,
            "backupCount": 10
        },
        "user_interface": {
            "level": "DEBUG",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "user_interface.log",
            "mode": "a",
            "formatter": "simple",
            "maxBytes": 1000000,
            "backupCount": 10
        },
        "api_manager": {
            "level": "DEBUG",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "api_manager.log",
            "mode": "a",
            "formatter": "simple",
            "maxBytes": 1000000,
            "backupCount": 10
        },
        "tests": {
            "level": "DEBUG",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "tests.log",
            "mode": "a",
            "formatter": "detailed",
            "maxBytes": 1000000,
            "backupCount": 10
        },
        "errors": {
            "class": "logging.FileHandler",
            "filename": "errors.log",
            "mode": "a",
            "level": "ERROR",
            "formatter": "detailed"
        }
    },
    "loggers": {
        "lazy_whale": {
            "handlers": ["lazy_whale"]
        },
        "user_interface": {
            "handlers": ["user_interface"]
        },
        "api_manager": {
            "handlers": ["api_manager"]
        },
        "test": {
            "handlers": ["tests"]
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": ["console", "file", "errors"]
    }
}